BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '0'
            font_size: 48
            multiline: False
            on_text: app.handle_calculate(input_number.text)
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                on_press: app.handle_increment(1, input_number.text)
                on_press: app.handle_calculate(input_number.text)
            Button:
                text: 'Down'
                on_press: app.handle_increment(-1, input_number.text)
                on_press: app.handle_calculate(input_number.text)
    Label:
        id: output_label
        text: ''
        font_size: 48
        color: (1, 1, 0.2, 1)
